<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.hib4.foldergenerator</id>
    <name>Architectural Folder Generator</name>
    <vendor email="hiba.kudus@gmail.com" url="https://github.com/hib4">hib4</vendor>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action class="com.github.hib4.foldergenerator.action.ActionGenerator"
                description="Generate a simple architectural folder"
                id="com.github.hib4.foldergenerator.action.ActionGenerator"
                icon="AllIcons.Actions.NewFolder"
                text="Architectural Generator">
            <add-to-group group-id="NewGroup"
                          anchor="first"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">

    </extensions>
</idea-plugin>
